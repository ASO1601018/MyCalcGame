<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masahiro.mycalcgame.MainActivity">

    <Button
        android:id="@+id/plus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/equal"
        app:layout_constraintTop_toTopOf="@+id/equal" />

    <Button
        android:id="@+id/minus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/three"
        app:layout_constraintTop_toTopOf="@+id/three" />

    <Button
        android:id="@+id/division"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="÷"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        app:layout_constraintTop_toTopOf="@+id/nine" />

    <Button
        android:id="@+id/multiple"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="×"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/six"
        app:layout_constraintTop_toTopOf="@+id/six" />

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-11dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/clear" />

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-13dp"
        android:background="@android:color/black"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/four"
        app:layout_constraintTop_toTopOf="@+id/four" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:paddingBottom="2dp"
        android:paddingRight="3dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        app:layout_constraintTop_toTopOf="@+id/seven" />

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/eight" />

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/black"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/black"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/black"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <Button
        android:id="@+id/clear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constraintTop_toTopOf="@+id/zero"/>

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-8dp"
        android:background="@android:color/black"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constraintTop_toTopOf="@+id/one" />

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/five" />

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_dark"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/answer"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <Button
        android:id="@+id/game_button"
        android:layout_width="165dp"
        android:layout_height="66dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/shape"
        android:text="ゲームモード"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/zero"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/zero"/>
</android.support.constraint.ConstraintLayout>
