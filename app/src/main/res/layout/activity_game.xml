<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masahiro.mycalcgame.GameActivity">

    <Button
        android:id="@+id/plus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="?android:attr/textColorLink"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/equal"
        app:layout_constraintTop_toTopOf="@+id/equal" />

    <Button
        android:id="@+id/minus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="18dp"
        android:background="?android:attr/textColorLink"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintLeft_toLeftOf="@+id/multiple"
        app:layout_constraintRight_toRightOf="@+id/multiple"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/division"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="÷"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        app:layout_constraintTop_toTopOf="@+id/nine" />

    <Button
        android:id="@+id/multiple"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/textColorLink"
        android:text="×"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/six"
        app:layout_constraintTop_toTopOf="@+id/six" />

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/clear" />

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/background_dark"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/background_dark"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/four"
        app:layout_constraintTop_toTopOf="@+id/four" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:background="@drawable/shape"
        android:paddingBottom="2dp"
        android:paddingRight="3dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="3dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/background_dark"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        app:layout_constraintTop_toTopOf="@+id/seven" />

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/background_dark"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/eight" />

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_dark"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_dark"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_dark"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <Button
        android:id="@+id/clear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/darker_gray"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constraintTop_toTopOf="@+id/zero" />

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/background_dark"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constraintTop_toTopOf="@+id/one" />

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/background_dark"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/five" />

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-55dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/background_dark"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/answer"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <Button
        android:id="@+id/dentaku_button"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape"
        android:text="電卓"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/zero" />

    <Button
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape"
        android:text="カウントクリア"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/dentaku_button"
        app:layout_constraintTop_toBottomOf="@+id/zero"
        android:layout_marginStart="105dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="51dp"
        android:layout_height="22dp"
        android:text="正解"
        app:layout_constraintLeft_toLeftOf="@+id/answer"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/answer"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="間違い"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/fact"
        android:layout_width="33dp"
        android:layout_height="18dp"
        android:layout_marginLeft="24dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/fict"
        android:layout_width="31dp"
        android:layout_height="17dp"
        android:layout_marginLeft="33dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginStart="33dp" />

</android.support.constraint.ConstraintLayout>
